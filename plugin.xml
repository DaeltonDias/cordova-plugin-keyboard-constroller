<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova-plugin-keyboard-controller" version="1.0.0" xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
	<name>KeyboardConstroller</name>
	<js-module name="KeyboardConstroller" src="www/KeyboardConstroller.js">
		<clobbers target="cordova.plugins.KeyboardConstroller" />
	</js-module>
	<platform name="android">
		<config-file parent="/*" target="res/xml/config.xml">
			<feature name="window.KeyboardConstroller">
				<param name="android-package" value="cordova.plugin.keyboard.controller.KeyboardConstroller" />
			</feature>
		</config-file>
		<config-file parent="/*" target="AndroidManifest.xml"></config-file>
		<source-file src="src/android/KeyboardConstroller.java" target-dir="src/cordova-plugin-keyboard-controller/KeyboardConstroller" />
	</platform>
</plugin>